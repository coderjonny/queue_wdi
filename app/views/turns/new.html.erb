  <div class="row">

    <div class="col-sm-3 col-sm-offset-1">
      <h2>
        Please wait your turn and add yourself to the queue
      </h2>
      <hr>

      <%= form_for @turn, url: {action: "create"}, html: {class: "form"} do |f| %>
        <%= f.text_field :name, placeholder: 'Your name' %>
        <%= f.text_field :subject, placeholder: 'subject' %>
        <%= f.text_area :question , size: "60x12", placeholder: 'Question?' %>
        <%= f.submit "Add me to the queue!", class: "btn btn-primary btn-large" %>
      <% end %>

    </div>

</div>
